* {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

@font-face
   font-family wt071
   font-style normal
   src url(./../fonts/wt071.ttf)

body{
    font-size: 14px;
   // font-family wt071;
}


#home {
    min-width: auto;
    width: 100%;
}

#main {
    min-width: auto;
}

#mainContent {
    width: 100%;
}

@media (max-width:767px) {
    #sideBar {
        display: none;
    }
}

@media (min-width: 768px) {
    #home {
        width: 750px;
    }
    #sideBar {
        width: 250px;
    }
    #mainContent {
        width: 500px;
    }
}

@media (min-width: 992px) {
    #home {
        width: 970px;
    }
    #sideBar {
        width: 250px;
    }
    #mainContent {
        width: 720px;
    }
}

@media (min-width: 1200px) {
    #home {
        width: 1170px;
    }
    #sideBar {
        width: 250px;
    }
    #mainContent {
        width: 920px;
    }
}


/* 左右排版设置 */

#sideBar {
    float: left;
}

#mainContent {
    float: left;
    margin-left: 0;
}

#mainContent .forFlow {
    margin-left: 0;
}


