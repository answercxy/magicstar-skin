catContainer = @block{
  border: 1px solid $cat-border-color;
  padding: 5px;
  margin-bottom: 10px;
}

catTitle = @block{
  display: block;
  border: none;
  height: 30px;
  line-height: 30px;
  background: $cat-title-background;
  color: yellow;
  text-align left;
  margin: -5px -5px 5px -5px;
  padding-left 5px;
}

#sideBar {
  padding-left: 10px;
}
#sideBarMain{
  .newsItem{ //公告
    {catContainer}
    .catListTitle{ //公告标题
      {catTitle}
    }
  }
  
  #calendar{
    display none;
  }  
}

#leftcontentcontainer{
  .catListTitle{ //所有的title
    {catTitle}
  }
  .catListEssay,
  .catListLink,
  .catListNoteBook,
  .catListTag,
  .catListPostCategory,
  .catListPostArchive,
  .catListArticleArchive,
  .catListImageCategory,
  .mySearch,
  .catListComment,
  .catListView,
  .catListFeedback{ //最新随笔 
    {catContainer}
  }
  .catListTag ul li{
    display inline-block;
    margin-right 5px;
    margin-bottom: 5px;
    padding: 0 5px;
    background #9ab26b;
    a{
      text-decoration none
      min-height 30px
      line-height 30px
    }
    &:hover a, &:hover{
      color: white;
    }
  }
  
  .catListLink li{
    float:left;
    width: 108px;
    text-align: center;
    background: #9ab26b;
    margin-bottom: 5px; 
    margin-right: 5px;
    &:nth-child(2n){
      margin-left: 5px;
      margin-right: 0;
    }
  }
  .catListLink::after{
    clear: both;
    content: '';
    display block;
  }

  .input_my_zzk{
    width: 160px;
  }
  #widget_my_zzk{
    margin-bottom: 5px;
  }
}
#blog-calendar{
  display: none;
}
  